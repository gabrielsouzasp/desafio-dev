@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center" ng-controller="indexController">

    <b>Saldo total: {{ totalAmount }}</b>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Tipo</th>
                <th scope="col">Data</th>
                <th scope="col">Hora</th>
                <th scope="col">Valor</th>
                <th scope="col">CPF</th>
                <th scope="col">Cartão</th>
                <th scope="col">Dono da loja</th>
                <th scope="col">Nome loja</th>
            </tr>
        </thead>

        <tbody>
            <tr ng-repeat="transaction in transactionsList | orderBy : 'storeName'">
                <td>{{ getTypeText(transaction.type) }}</td>
                <td>{{ formatDateTime(transaction.date) }}</td>
                <td>{{ formatHours(transaction.hour) }}</td>
                <td>{{ transaction.amount }}</td>
                <td>{{ maskCpf(transaction.document) }}</td>
                <td>{{ transaction.card }}</td>
                <td>{{ transaction.storeOwner }}</td>
                <td>{{ transaction.storeName }}</td>
            </tr>
        </tbody>

    </table>
</div>


@section Scripts {
    <script src="~/js/indexController.js"></script>
}